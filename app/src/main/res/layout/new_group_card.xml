<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pad_marg_xsmall"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="0dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardElevation="2dp">
        <!--card_view:cardUseCompatPadding="true"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">
                <TextView
                    android:id="@+id/group_n1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Group Name"
                    android:textSize="@dimen/font_size_medium"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:paddingTop="@dimen/pad_marg_small"
                    android:paddingLeft="@dimen/pad_marg_small"/>
                <TextView
                    android:id="@+id/topic_n1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Topic"
                    android:textSize="@dimen/font_size_medium"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/pad_marg_small"
                    android:paddingBottom="@dimen/pad_marg_small"/>
                <TextView
                    android:id="@+id/date_n1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textSize="@dimen/font_size_medium"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="italic"
                    android:maxLines="1"
                    android:paddingTop="@dimen/pad_marg_small"
                    android:paddingLeft="@dimen/pad_marg_small"
                    android:paddingBottom="@dimen/pad_marg_small"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/location_picture"
                    android:src="@drawable/cnu"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="cnu campus"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
